Package: rpkgtools
Title: Easily Install and Load Select Packages
Version: 0.0.0.9000
Authors@R: c(
  person(
  given = "Indrajeet", 
  family = "Patil", 
  email = "patilindrajeet.science@gmail.com", 
  role = c("aut", "cre"), 
  comment = c(ORCID = "0000-0003-1995-6531"))
